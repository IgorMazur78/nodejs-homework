  "bugs": {
    "url": "https://github.com/IgorMazur78/nodejs-homework/issues"
  },
  "homepage": "https://github.com/IgorMazur78/nodejs-homework#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "joi": "^17.4.0",
    "lowdb": "^1.0.0",
    "morgan": "^1.10.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "eslint": "^7.23.0",
